  <body>
    {{>navbar}}

    <!-- Main header  -->
    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          
          <div class="main_content">
            <form class="temp_form">
                <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                <input type="submit" value="search" id="submitBtn">
            </form>
          </div>

          
          <div class="tempInformation">
            <div class="top_layer">
                <p id="day">Wednesday</p>
                <p id="today_date">5 Apr</p>
            </div> 

            <div class="main_layer">
                <p id="city_name">Get Output Here</p>
                <div class="middle_layer data_hide">

                    <p id="temp"><span id="temp_val">0</span> <sup>o</sup>C</p>

                    <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i> </p>
                </div>
            </div>
          </div>


        </div>
      </div>
    </div>

    <!-- Footer code -->

{{>footer}}

<script src="js/main.js"></script>
<script>
  const day = document.getElementById('day');

  const getDay = () => {
    let weekday = new Array(7);
    weekday[0] = "Sunday";
    weekday[1] = "Monday";
    weekday[2] = "Tuesday";
    weekday[3] = "Wednesday";
    weekday[4] = "Thursday";
    weekday[5] = "Friday";
    weekday[6] = "Saturday";

    const curr= new Date();
    let store = weekday[curr.getDay()];

    day.innerText = store;
  }

  
const getDate = () => {
  var months = [
    "Jan",
    "Feb",
    "Mar",
    "Apr",
    "May",
    "June",
    "July",
    "Aug",
    "Sept",
    "Oct",
    "Nov",
    "Dec",
  ];

  var now = new Date();
  var month = months[now.getMonth()];
  var date = now.getDate();

  today_date.innerText = `${date} ${month}`;

}

  getDay();
  getDate();

</script>
  </body>
</html>